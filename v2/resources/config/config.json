{
  "config_version": 1,
  "llm": {
    "langgraph_nodes": {
      "agent": "glm-4.7-flash:q8_0",
      "codegen": "qwen2.5-coder:14b",
      "episode_sql": "qwen2.5-coder:14b",
      "episode_summarize": "qwen2.5:7b",
      "final": "deepseek-r1:14b",
      "memory_retrieval": "qwen2.5:7b",
      "planner": "qwen2.5:7b",
      "reflect": "qwen2.5:7b",
      "retrieval": "qwen2.5:7b",
      "router": "qwen2.5:7b",
      "summarize": "llama3.1:8b",
      "tools": "qwen2.5:7b",
      "verifier": "deepseek-r1:14b"
    },
    "model": "deepseek-r1:14b",
    "provider": "ollama",
    "providers": {
      "huggingface": {
        "api_token_env": "HUGGINGFACE_API_TOKEN",
        "kind": "huggingface_inference",
        "model": null,
        "url": "https://api-inference.huggingface.co"
      },
      "lmstudio": {
        "api_key_env": null,
        "kind": "openai_compatible",
        "url": "http://localhost:1234/v1"
      },
      "ollama": {
        "kind": "ollama",
        "url": "http://localhost:11434"
      },
      "openai_compatible": {
        "api_key_env": null,
        "kind": "openai_compatible",
        "url": "http://localhost:1234/v1"
      }
    }
  },
  "logging": {
    "file": "./log/thalamus.log",
    "level": "INFO",
    "thalamus_enabled": false,
    "ui_chat_session_enabled": false
  },
  "openmemory": {
    "embeddings": {
      "model": "nomic-embed-text:latest",
      "ollama_url": "http://localhost:11434",
      "provider": "ollama"
    },
    "endpoint": {
      "kind": "local",
      "url": null
    },
    "mode": "local",
    "path": "./memory.sqlite",
    "tier": "deep"
  },
  "thalamus": {
    "default_user_id": "default",
    "enable_reflection": true,
    "max_memory_results": 100,
    "max_tool_steps": 16,
    "message_file": "chat_history.jsonl",
    "message_history": 100,
    "orchestrator": {
      "limits": {
        "history_message_limit": 20,
        "tool_step_limit": 16
      },
      "retrieval": {
        "default_k": 20,
        "max_k": 40,
        "min_score": 0.0
      },
      "routing": {
        "default_intent": "qa"
      }
    },
    "project_name": "llm-thalamus",
    "short_term_memory": {
      "max_messages": 7
    }
  },
  "tools": {
    "allowed": [
      "openmemory_query"
    ],
    "enabled": true
  },
  "ui": {
    "theme": "default",
    "window": {
      "height": 850,
      "width": 980
    }
  },
  "ui_descriptions": {
    "enabled": true
  }
}
